@model ClassRoomMvc.ViewModels.ClassroomViewModel

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>ClassRoom</h4>
	<hr />
	<dl class="row">		
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Capacity)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Capacity)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Students)
		</dt>
		<dd class="col-sm-10">
			@foreach (var student in Model.Students)
			{
				@Html.DisplayFor(modelItem => student.StudentId)
				@Html.Raw(",")
			}
		</dd>
		@foreach (var assignment in Model.Assignments)
		{
			<dt class="col-sm-2">
				@Html.DisplayNameFor(modelItem => assignment.AssignmentId)
			</dt>
			<dd class="col-sm-10">
				@assignment.AssignmentId
			</dd>
			<dt class="col-sm-2">
				Grade
			</dt>
			<dd class="col-sm-10">
				@assignment.Grade
			</dd>
		}
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.ClassroomId">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
