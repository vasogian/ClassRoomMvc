@model ClassRoomMvc.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentLastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentLastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClassRoomId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassRoomId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AssignmentId)
        </dt>
        @foreach (var assignment in Model.Assignment)
		{
			<dt class="col-sm-2">
				@Html.DisplayNameFor(modelItem => assignment.StudentId)
			</dt>
			<dd class="col-sm-10">
				@assignment.StudentId
			</dd>
			
		}
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
